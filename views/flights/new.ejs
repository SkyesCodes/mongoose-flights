<%- include('../partials/header') %>

<h2>Book a new flight</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>">
  <label>Airport Destination:</label>
      <select name="destination">
          <option value="ATL">(ATL) Atlanta, GA</option>
          <option value="AUS">(AUS) Austin, TX</option>
          <option value="DFW">(DFW) Dallas, TX</option>
          <option value="DEN">(DEN) Denver, CO</option>
          <option value="JFK">(JFK) New York, NY</option>
          <option value="LAX">(LAX) Los Angeles, CA</option>
          <option value="MCO">(MCO) Orlando, FL</option>
          <option value="MIA">(MIA) Miami, FL</option>
          <option value="SAN">(SAN) San Diego, CA</option>
          <option value="SEA">(SEA) Seattle, WA</option>
          <option value="SFO">(SFO) San Francisco, CA</option>
      </select>
  <br><br>
  <label>Arrival Details:</label>
  <input type="date" name="arrivalDate">
  <br><br>
  <label>Arrival Time:</label>
  <input type="time" name="arrivalTime">
<br><br><br>
<button type="submit">Add Destination</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>
